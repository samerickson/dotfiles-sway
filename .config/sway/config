# ~/.config/sway/config

# Startup Programs:
# =================
bar {
	position bottom
	status_command i3blocks
	font Inconsolata Nerd Font
	colors {
		statusline #ffffff
		background #00000055
		focused_workspace	#62feff88 #62feff88 #ffffffff
		active_workspace	#215959aa #215959aa #ffffff88
		inactive_workspace	#215959aa #215959aa #ffffff88
	}
}

# Start notification daemon
exec mako

exec swayidle -w \
    timeout 300 'swaylock -f -c 62feff' \
	timeout 600 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
	before-sleep 'swaylock -f -c 62feff'

# Variables
# =========
set $mod Mod4
set $term termite
set $browser firefox
set $file nautilus
set $menu "rofi -show run"

input 1452:610:Apple_Inc._Apple_Internal_Keyboard_/_Trackpad {
	xkb_options caps:escape
	repeat_delay 200
	repeat_rate 25
}
input 6940:6973:Corsair_Corsair_Gaming_K55_RGB_Keyboard {
	xkb_options caps:escape
	repeat_delay 250
	repeat_rate 25
}

input 2821:6170:ASUS_ROG_GLADIUS {
	scroll_factor 6
}

# Select the border size
for_window [class="^.*"] border pixel 2
for_window [app_id="^.*"] border pixel 2
for_window [app_id="^.*_floating"] floating enable

# Add gaps between the windows [note this applies to new windows]
gaps inner 8

# Set wallpaper
output * bg ~/.config/wallpaper.* fill

# Set pixel density scaling
output eDP-1 pos 1920 0 scale 2 res 2880x1800
output HDMI-A-3 pos 0 0 res 1920x1080

# This makes it so that holding down mod allows you to change the location of
#	windows using the mouse.
floating_modifier $mod normal

# KEYBINDINGS
# ===========
	# start a terminal
	bindsym $mod+Return exec $term
	
	# spawn a floating terminal
	bindsym $mod+Shift+Return exec ~/.bin/floating-term.sh

	# Start web browser
	bindsym $mod+w		exec $browser

	# Start file manager
	bindsym $mod+f			exec $file

	# Start screen recording / stop screen recording
	bindsym $mod+z			exec ~/.bin/screencast.sh
	bindsym $mod+shift+z	exec kill -2 $(pidof wf-recorder)

	# kill focused window
	bindsym $mod+Shift+q 	kill

	# start your launcher
	bindsym $mod+d 			exec $menu

	# Take screen shot
	bindsym --release $mod+p exec ~/.bin/screenshot

	# Open network manager / current manager does not work with enterprise wifi
	bindsym $mod+shift+w	exec ~/.bin/floating-term.sh nmtui

	# reload the configuration file
	bindsym $mod+Shift+c reload

	# exit sway (logs you out of your Wayland session)
	bindsym $mod+Shift+e exec swaynag -t warning -m "Exit sway?" -b "YES" "swaymsg exit"

# Function Keys:
# ==============
	bindsym F1		
	bindsym F2
	bindsym F3
	bindsym F4
	bindsym F5
	bindsym F6
	bindsym F7
	bindsym F8
	bindsym F9
	bindsym F10
#	bindsym F11	 Full screen toggle	
	bindsym F12

# Moving around:
# ==============
	# Move your focus around
	bindsym $mod+h focus left
	bindsym $mod+j focus down
	bindsym $mod+k focus up
	bindsym $mod+l focus right
	bindsym $mod+Left focus left
	bindsym $mod+Down focus down
	bindsym $mod+Up focus up
	bindsym $mod+Right focus right

	# Move windows around
	bindsym $mod+Shift+h move left
	bindsym $mod+Shift+j move down
	bindsym $mod+Shift+k move up
	bindsym $mod+Shift+l move right
	bindsym $mod+Shift+Left move left
	bindsym $mod+Shift+Down move down
	bindsym $mod+Shift+Up move up
	bindsym $mod+Shift+Right move right

# Workspaces:
# ===========
	# Switch to workspace
	bindsym $mod+1 workspace 1
	bindsym $mod+2 workspace 2
	bindsym $mod+3 workspace 3
	bindsym $mod+4 workspace 4
	bindsym $mod+5 workspace 5
	bindsym $mod+6 workspace 6
	bindsym $mod+7 workspace 7
	bindsym $mod+8 workspace 8
	bindsym $mod+9 workspace 9
	bindsym $mod+0 workspace 10

	# Move focused container to workspace
	bindsym $mod+Shift+1 move container to workspace 1
	bindsym $mod+Shift+2 move container to workspace 2
	bindsym $mod+Shift+3 move container to workspace 3
	bindsym $mod+Shift+4 move container to workspace 4
	bindsym $mod+Shift+5 move container to workspace 5
	bindsym $mod+Shift+6 move container to workspace 6
	bindsym $mod+Shift+7 move container to workspace 7
	bindsym $mod+Shift+8 move container to workspace 8
	bindsym $mod+Shift+9 move container to workspace 9
	bindsym $mod+Shift+0 move container to workspace 10

# Layouts:
# ========
	# Change the layout of the current workspace
	bindsym $mod+s layout stacking
	bindsym $mod+t layout tabbed
	bindsym $mod+e layout toggle split

	# You can "split" the current object of your focus with
	# $mod+b or $mod+v, for horizontal and vertical splits
	# respectively.
	bindsym $mod+b splith
	bindsym $mod+v splitv

	# Make the current window fullscreen
	bindsym $mod+shift+f fullscreen

	# Toggle the current focus between tiling and floating mode
	bindsym $mod+space floating toggle

	# Swap focus between the tiling area and the floating area
	bindsym $mod+shift+space focus mode_toggle

	# Open a calculator
	bindsym $mod+a exec $term -e bc

# Scratchpad:
# ===========
	# Move the currently focused window to the scratchpad
	bindsym $mod+Shift+minus move scratchpad

	# View windows in scratchpad
	bindsym $mod+minus scratchpad show

mode "resize" {
	bindsym h resize shrink width 10px
	bindsym j resize grow height 10px
	bindsym k resize shrink height 10px
	bindsym l resize grow width 10px

	bindsym Left resize shrink width 10px
	bindsym Down resize grow height 10px
	bindsym Up resize shrink height 10px
	bindsym Right resize grow width 10px

	# return to defhult mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Multi-media keys:
# =================
bindsym Print					exec grim ~/Pictures/$(date +%Y%m%d%h%m%s).png
bindsym XF86AudioMute			exec ~/.bin/audio.sh mute 
bindsym XF86AudioRaiseVolume 	exec ~/.bin/audio.sh add
bindsym XF86AudioLowerVolume 	exec ~/.bin/audio.sh sub
bindsym XF86PowerOff 		exec swaynag -t warning -m 'Are you sure you want to power machine off?' -b "Yes, shutdown now" 'shutdown now'


#bindsym XF86AudioNext			exec
#bindsym XF86AudioPlay			exec
#bindsym XF86AudioPrev			exec
#bindsym XF86AudioStop			exec
#bindsym XF86AudioRewind		exec
#bindsym XF86AudioForward		exec
bindsym XF86MonBrightnessDown	exec lux -s 50
bindsym XF86MonBrightnessUp		exec lux -a 50

include /etc/sway/config.d/*
