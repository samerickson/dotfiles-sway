separator_block_width=20

[web-cam]
interval=3
command=~/.config/i3blocks/scripts/webcam.sh

[recording]
interval=3
command=~/.config/i3blocks/scripts/recording.sh

[disk-usage-root]
interval=60
command=~/.config/i3blocks/scripts/disk.sh /

[disk-usage-home]
interval=60
command=~/.config/i3blocks/scripts/disk.sh /home

[volume]
