interval=60
label=HOME:
command=~/.config/i3blocks/scripts/disk.sh /home

[clock]
interval=15
command=date +%A,\ %b\ %d\ %H:%m

[battery]
label=ðŸ”‹
interval=30
command=~/.config/i3blocks/scripts/battery.sh

[volume]
