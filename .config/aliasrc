# vim:syntax=sh
# File: ~/.config/aliasrc

# All XDG Environment variables are defined in ~/.profile

# Application remapping
alias	vim="nvim" vi="nvim" \
		aftershot="AfterShot3X64" \
		mpv="mpv --gpu-context=wayland" \
		e="$EDITOR"

# System commands
alias	mx="chmod a+x"

# Reload shell environment
alias	src="source ~/.bashrc; echo 'reloaded .bashrc'"

# Open notes
alias	n="vim ~/notes/index.md" \
		N="cs ~/notes" \
		v="vim ~/notes/viu/index.md" \
		V="cs ~/notes/viu"

# Directories
alias	b="cs ~/.local/bin" \
		m="cs ~/.local/misc" \
		cf="cs $XDG_CONFIG_HOME" \
		D="cs ~/Documents" \
		d="cs ~/Downloads" \
		h="cs $HOME" \
		l="cs ~/.local" \
		cds="cs ~/Github/samerickson.me" \
		g="cs ~/Github" \
		p="cs ~/.local/private" \
		P="cs ~/Pictures" \
		t="cs ~/Downloads/transmission" \
		T="cs ~/.local/tap" \
		i="cs ~/.local/share/icons/default" \

# aliases for quickly editing frequently accessed configuration files
alias	cfb="$EDITOR $HOME/.bashrc" \
		cfp="$EDITOR $HOME/.profile" \
		cfv="$EDITOR $XDG_CONFIG_HOME/nvim/init.vim" \
		cfs="$EDITOR $XDG_CONFIG_HOME/sway/config" \
		cfa="$EDITOR $XDG_CONFIG_HOME/aliasrc" \
		cfi="$EDITOR $XDG_CONFIG_HOME/i3/config"

# Aliases for saving a few key presses off ls commands
alias 	ls="ls --color=auto" \
		ll="ls -l" \
		la="ls -a" \
		llh="ls -lh" \
		lah="ls -lah" \

# Managing dotfiles / otherwise that is a lot of typting for routine file managment
alias	dotf="git --git-dir=$HOME/.dotfiles --work-tree=$HOME" \
		dota="git --git-dir=$HOME/.dotfiles --work-tree=$HOME add" \
		dots="git --git-dir=$HOME/.dotfiles --work-tree=$HOME status -uno" \
		dotc="git --git-dir=$HOME/.dotfiles --work-tree=$HOME commit" \
		dotcm="git --git-dir=$HOME/.dotfiles --work-tree=$HOME commit -m" \
		dotb="git --git-dir=$HOME/.dotfiles --work-tree=$HOME branch" \
		dotch="git --git-dir=$HOME/.dotfiles --work-tree=$HOME checkout" \
		dotl="git --git-dir=$HOME/.dotfiles --work-tree=$HOME log --oneline" \
		dotd="git --git-dir=$HOME/.dotfiles --work-tree=$HOME diff"

# Saving a few key presses off frequently uses git commands
alias	gc="git commit -S -m" \
		gs="git status" \
		ga="git add" \
		gd="git diff" \
		gr="git remote" \
		gl="git log --oneline" \
		gp="git push"

# These ones are here just for fun
alias rr="curl -s -L https://raw.githubusercontent.com/keroserene/rickrollrc/master/roll.sh | bash"


# FUNCTIONS:
# ==========
# Delete nvim swapfiles
function delswp() { rm ~/.local/share/nvim/swap/*; }

# Search bash history
hist() { history | grep $@; }

# Cd into a directory followed by ls
cs() { cd $1 && echo "$1" && ls; }

# Find and go to root directory of current git repository
gcd() { cd "$(git rev-parse --show-toplevel)"; }

# Backup a file or directory the lazy way
#	Useful for tinkering with config files, or temporarily changing code
back() {
	for var in "$@"; do
		cp -r "$var" "$var.backup"
		echo "Created backup of $var:	$var.backup"
	done
}

# If a ".backup" file exists, swap it with the file of the same name,
#	otherwise remove the .backup suffix
uback() {
	[ ! -f "$1.backup" ] && printf "File:\t$1.backup, not found.\n"
	[ -f "$1.backup" ] && [ -f "$1" ] && mv "$1" "$1.tmp" && mv "$1.backup" "$1" && mv "$1.tmp" "$1.backup" && \
		printf "Swapped $1.backup with $1"
	[ -f "$1.backup" ] && [ ! -f "$1" ] && mv "$1.backup" "$1" && \
		printf "Orriginal File not found restored from $1.backup"
}

# Moves all passed paramenters into the trash (located in ~/.Trash)
trash() {
    for var in "$@"; do
        mv -nv "$var" "~/.trash"
    done
}


