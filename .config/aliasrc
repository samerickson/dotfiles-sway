# vim:syntax=sh
# File: ~/.config/aliasrc

# Application remapping
alias	vim="nvim" vi="nvim" aftershot="AfterShot3X64"

# System commands
alias	mx="chmod a+x"

# Reload shell environment
alias	src="source ~/.bashrc; echo 'reloaded .bashrc'"

# Directories
alias	b="cs ~/.local/bin" \
		cf="cs ~/.config" \
		D="cs ~/Documents" \
		d="cs ~/Downloads" \
		h="cs ~" \
		s="cs ~/Github/samerickson.me" \
		g="cs ~/Github" \
		p="cs ~/.local/private" \
		t="cs ~/Downloads/transmission" \
		T="cs ~/.local/tap" \
		m="cs ~/.local/misc-files"

# aliases for quickly editing frequently accessed configuration files
alias	cfb="$EDITOR ~/.bashrc" \
		cfp="$EDITOR ~/.profile" \
		cfv="$EDITOR ~/.config/nvim/init.vim" \
		cfs="$EDITOR ~/.config/sway/config" \
		cfa="$EDITOR ~/.config/aliasrc" \
		cfi="$EDITOR ~/.config/i3/config"

# Aliases for saving a few key presses off ls commands
alias 	ls="ls --color=auto" \
		ll="ls -l" \
		la="ls -a" \
		llh="ls -lh" \
		lah="ls -lah" \

# Managing dotfiles / otherwise that is a lot of typting for routine file managment
alias	dotf="/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME" \
		dota="/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME add" \
		dots="/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME status -uno" \
		dotc="/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME commit -S" \
		dotcm="/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME commit -S -m" \
		dotb="/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME branch" \
		dotch="/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME checkout" \
		dotl="/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME log" \
		dotd="/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME diff"

# Saving a few key presses off frequently uses git commands
alias	gc="git commit -S -m" \
		gs="git status" \
		ga="git add"

# These ones are here just for fun
alias rr="curl -s -L https://raw.githubusercontent.com/keroserene/rickrollrc/master/roll.sh | bash"


# FUNCTIONS:
# ==========

# Delete nvim swapfiles
function delswp() { rm ~/.local/share/nvim/swap/*; }

# Add the GNUv3.0 License to the current directory
license() { curl https://samerickson.me/files/LICENSE-GNU3 > LICENSE; }

# Search bash history
hist() { history | grep $@; }

# Cd into a directory followed by ls
cs() { cd $1 && echo "$1" && ls; }

# Find and go to root directory of current git repository
gcd() { cd "$(git rev-parse --show-toplevel)"; }

# Display git commits in a pretty one line format
commitlist() { git log --pretty=format: %h - %an, %ar : %s; }

# Print plain text in a nice looking way
print() { 
	if [ "$#" -eq 1 ]; then
		lpr -o page-left=54 -o page-right=54 -p "$1"
	elif [ "$#" -eq 2 ]; then
		lpr -o page-left=54 -o page-right=54 -p "$1" -# "$2"
	else
		echo "Incorrect usage: print <file> [optional-num-copies]" 
	fi
}


